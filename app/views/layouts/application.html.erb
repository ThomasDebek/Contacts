      <a class="brand" href="#">Project name</a>

      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="active"><a href="#">Home</a></li>
          <li><%= link_to 'People', people_path %></li>
          <li><%= link_to 'Comments', comments_path %></li>
        </ul>
      </div>
